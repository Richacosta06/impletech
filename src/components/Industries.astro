---
import { Icon } from "astro-icon/components";
---

<!-- Industries Section -->
<section id="industrias" class="py-16 md:py-28 border-t border-gray-200">
  <div class="container mx-auto px-4">
    <h2
      class="text-4xl md:text-5xl font-bold text-center text-impletech-blue mb-16 animate-fade-in"
    >
      Industrias que Protegemos
    </h2>
    <div
      class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-y-12 gap-x-6"
    >
      <!-- Industry Item: Airports -->
      <div
        class="flex flex-col items-center text-center animate-fade-in"
        style="animation-delay: 0.1s;"
      >
        <Icon name="mdi:airport" class="w-[4.5rem] h-[4.5rem] mb-4 text-impletech-green" />
        <p class="text-xl font-semibold text-impletech-dark-text">
          Aeropuertos
        </p>
      </div>
      <!-- Industry Item: Banking -->
      <div
        class="flex flex-col items-center text-center animate-fade-in"
        style="animation-delay: 0.2s;"
      >
        <Icon name="mdi:bank" class="w-[4.5rem] h-[4.5rem] mb-4 text-impletech-green" />
        <p class="text-xl font-semibold text-impletech-dark-text">Banca</p>
      </div>
      <!-- Industry Item: Cities -->
      <div
        class="flex flex-col items-center text-center animate-fade-in"
        style="animation-delay: 0.3s;"
      >
        <Icon name="mdi:city" class="w-[4.5rem] h-[4.5rem] mb-4 text-impletech-green" />
        <p class="text-xl font-semibold text-impletech-dark-text">
          Urbanizaciones
        </p>
      </div>
      <!-- Industry Item: Corporate campus -->
      <div
        class="flex flex-col items-center text-center animate-fade-in"
        style="animation-delay: 0.4s;"
      >
        <Icon
          name="mdi:office-building"
          class="w-[4.5rem] h-[4.5rem] mb-4 text-impletech-green"
        />
        <p class="text-xl font-semibold text-impletech-dark-text">
          Campus Corporativos
        </p>
      </div>
      <!-- Industry Item: Data centers -->
      <div
        class="flex flex-col items-center text-center animate-fade-in"
        style="animation-delay: 0.5s;"
      >
        <Icon name="mdi:database" class="w-[4.5rem] h-[4.5rem] mb-4 text-impletech-green" />
        <p class="text-xl font-semibold text-impletech-dark-text">
          Centros de Datos
        </p>
      </div>
      <!-- Industry Item: Education -->
      <div
        class="flex flex-col items-center text-center animate-fade-in"
        style="animation-delay: 0.6s;"
      >
        <Icon name="mdi:school" class="w-[4.5rem] h-[4.5rem] mb-4 text-impletech-green" />
        <p class="text-xl font-semibold text-impletech-dark-text">Educación</p>
      </div>
      <!-- Industry Item: Energy & utilities -->
      <div
        class="flex flex-col items-center text-center animate-fade-in"
        style="animation-delay: 0.7s;"
      >
        <Icon
          name="mdi:power-plug"
          class="w-[4.5rem] h-[4.5rem] mb-4 text-impletech-green"
        />
        <p class="text-xl font-semibold text-impletech-dark-text">
          Energía y Servicios
        </p>
      </div>
      <!-- Industry Item: Federal -->
      <div
        class="flex flex-col items-center text-center animate-fade-in"
        style="animation-delay: 0.8s;"
      >
        <Icon name="mdi:gavel" class="w-[4.5rem] h-[4.5rem] mb-4 text-impletech-green" />
        <p class="text-xl font-semibold text-impletech-dark-text">
          Gubernamental
        </p>
      </div>
      <!-- Industry Item: Gaming -->
      <div
        class="flex flex-col items-center text-center animate-fade-in"
        style="animation-delay: 0.9s;"
      >
        <Icon name="mdi:casino" class="w-[4.5rem] h-[4.5rem] mb-4 text-impletech-green" />
        <p class="text-xl font-semibold text-impletech-dark-text">
          Casinos y Juegos
        </p>
      </div>
      <!-- Industry Item: Healthcare -->
      <div
        class="flex flex-col items-center text-center animate-fade-in"
        style="animation-delay: 1.0s;"
      >
        <Icon
          name="mdi:hospital-building"
          class="w-[4.5rem] h-[4.5rem] mb-4 text-impletech-green"
        />
        <p class="text-xl font-semibold text-impletech-dark-text">Salud</p>
      </div>
      <!-- Industry Item: Retail -->
      <div
        class="flex flex-col items-center text-center animate-fade-in"
        style="animation-delay: 1.2s;"
      >
        <Icon name="mdi:store" class="w-[4.5rem] h-[4.5rem] mb-4 text-impletech-green" />
        <p class="text-xl font-semibold text-impletech-dark-text">
          Comercio Minorista
        </p>
      </div>
      <!-- Industry Item: Traffic -->
      <div
        class="flex flex-col items-center text-center animate-fade-in"
        style="animation-delay: 1.3s;"
      >
        <Icon
          name="mdi:traffic-light"
          class="w-[4.5rem] h-[4.5rem] mb-4 text-impletech-green"
        />
        <p class="text-xl font-semibold text-impletech-dark-text">Tráfico</p>
      </div>
      <!-- Industry Item: Transit -->
      <div
        class="flex flex-col items-center text-center animate-fade-in"
        style="animation-delay: 1.4s;"
      >
        <Icon name="mdi:car" class="w-[4.5rem] h-[4.5rem] mb-4 text-impletech-green" />
        <p class="text-xl font-semibold text-impletech-dark-text">
          Servicios Vehiculares
        </p>
      </div>
      <!-- Industry Item: Venues -->
      <div
        class="flex flex-col items-center text-center animate-fade-in"
        style="animation-delay: 1.5s;"
      >
        <Icon name="mdi:stadium" class="w-[4.5rem] h-[4.5rem] mb-4 text-impletech-green" />
        <p class="text-xl font-semibold text-impletech-dark-text">Recintos</p>
      </div>
    </div>
  </div>
</section>
