---
import { Image } from "astro:assets";

import comercial from "../assets/images/projects/comercial.jpg";
import residencial from "../assets/images/projects/residencial.jpg";
import industrial from "../assets/images/projects/industrial.jpg";

import { getCollection } from "astro:content";

const projects = await getCollection("projects");
---

<!-- Project Gallery Section -->
<section id="galeria-proyectos" class="py-16 md:py-28 border-t border-gray-200">
  <div class="container mx-auto px-4">
    <h2
      class="text-4xl md:text-5xl font-bold text-center text-impletech-blue mb-16 animate-fade-in"
    >
      Proyectos Destacados
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
      {
        projects.map((project) => (
          <div
            class="bg-white rounded-lg shadow-md overflow-hidden animate-scale-in"
            style={`animation-delay: ${0.2 + projects.indexOf(project) * 0.2}s;`}
          >
            <Image
              transition:name={`img-${project.slug}`}
              src={`/${project.data.img}`}
              alt={project.data.title}
              width={600}
              height={400}
              class="w-full h-64 object-cover hover:scale-105 transition-transform duration-300"
            />
            <div class="p-6">
              <h3 class="text-2xl font-semibold text-impletech-dark-text mb-3">
                {project.data.title}
              </h3>
              <p class="text-impletech-muted-text-light text-lg leading-relaxed">
                {project.data.description}
              </p>
              <div class="mt-4">
                <a
                  href={`/proyecto/${project.slug}`}
                  class="inline-block bg-impletech-blue text-white px-6 py-3 rounded-md hover:bg-impletech-dark-blue transition-colors duration-300"
                >
                  Ver m√°s
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
